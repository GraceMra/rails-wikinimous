<br>
<div class="container">

  <h1>List of articles</h1>
  <br>
    <ul>
      <% @articles.each do |article| %>
        <li>
        <%= link_to article.title, article_path(article) %>
            <%= link_to article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } do %> <span class="glyphicon glyphicon-trash"></span>
            <% end %>
        </li>
      <% end %>
    </ul>
<hr>
  <div class="btn btn-md">
    <span class="glyphicon glyphicon-plus"></span>
    <%=link_to "Add a new article", article_path(@articles) %>
  </div>

</div>
